@model SOGIP_v2.Models.Rutina
@using (Html.BeginForm("Create", "Ejercicio_Rutina", FormMethod.Post, new { enctype = "form" }))
{

    <div class="exp_fis">
        @Html.Label("Seleccione el Atleta", new { @class = "control-label" })
        <select name="SelectedAthlete">
            @foreach (var entity in (SelectList)ViewBag.Atletas)
            {
                <option value="@entity.Value">
                    @Html.Label(entity.Text, new { @class = "control-label" })
                </option>
            }
        </select>
    </div>
    <div>
        @Html.Label("Fecha", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.RutinaFecha, new { @class = "form-control", id = "nombre", type = "date" })
        <br />
        @*@Html.Label("Nombre", htmlAttributes: new { @class = "control-label" })
            <br />
            @Html.TextBoxFor(model => model.RutinaId, new { @class = "control-label" })
            <br />*@
        @Html.Label("Observaciones", htmlAttributes: new { @class = "control-label" })
        <br />
        @Html.TextBoxFor(model => model.RutinaObservaciones, new { @class = "control-label" })
    </div>
    <br />
    <table class="table table-bordered table-responsive table-hover">
        <TR>
            <TH COLSPAN=1>Ejercicio</TH>
            <TH COLSPAN=3>Semana 1-2</TH>
            <TH COLSPAN=3>Semana 3-4</TH>
            <TH COLSPAN=3>Semana 5-6</TH>
            <TH COLSPAN=1>Editar</TH>
        </TR>
        <TR>
            <TH></TH>
            <TH>S</TH>
            <TH>R</TH>
            <TH>P</TH>
            <TH>S</TH>
            <TH>R</TH>
            <TH>P</TH>
            <TH>S</TH>
            <TH>R</TH>
            <TH>P</TH>
            <TH></TH>
        </TR>
    </table>
    <div class="col-md-10">
        <div class="form-group">
            <div>
                <p><a class="btn btn-default" href="/Ejercicio_Rutina/Edit">Agregar Ejercicio</a></p>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <input type="submit" class="btn btn-default" id="btn_sub_form" value="Crear Rutina" />
    </div>
}
</div>

}