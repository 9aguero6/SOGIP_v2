@{
    ViewBag.Title = "Expedientes Físicos";
}

<div class="container">
    @using (Html.BeginForm("Index", "ExpedientesFisicos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="exp_fis">
            <font color="red"><b>@Html.Raw(ViewBag.Error)</b></font>
            @Html.Label("Seleccione el Atleta: ", new { @class = "control-label" })
            <select name="SelectedAthlete">
                @foreach (var entity in (SelectList)ViewBag.Atletas)
                {
                    <option value="@entity.Value">
                        @Html.Label(entity.Text, new { @class = "control-label" })
                    </option>
                }
            </select>
        </div>
        <div class="exp_fis" id="inicio">
            <font color="red"><b>@Html.Raw(ViewBag.Error1)</b></font>
            <span>Seleccione el archivo InBody a importar: </span><input type="file" name="inbody" value="Cargar" />
            <br />
            <br />
            <br />
        </div>
        <div class="exp_fis">
            <font color="red"><b>@Html.Raw(ViewBag.Error2)</b></font>
            <span>Seleccione el archivo de Prueba de Fuerza a importar: </span><input type="file" name="pruFu" value="Cargar" />
            <br />
            <input type="submit" value="Importar" />
        </div>
    }
</div>