@using System.Text.RegularExpressions;
@model SOGIP_v2.Models.Conjunto_Ejercicio
@{
    ViewBag.Title = "Ejercicios";
    @Styles.Render("~/Content/Rutina.css")
}


<h2>Rutina</h2>


<html lang="es">
<head>
    <meta charset="utf-8">

    <div>
        @Html.ActionLink("Lista Rutinas", "Index")
    </div>
</head>
<body>
    <h4>Usuario</h4>
    @Html.DisplayFor(model => model.ConjuntoEjercicioRutina.Usuario.Cedula)
    @{
        var viewDataNombre = ViewData["nombre"];
    }
    <h4> @viewDataNombre </h4>

    <div class="col-sm-12">
        <table id="rutina" class="table table-bordered table-responsive table-hover">
            <thead>

                <TR>
                    <TH COLSPAN=1>Ejercicio</TH>
                    <TH COLSPAN=3>Semana 1-2</TH>
                    <TH COLSPAN=3>Semana 3-4</TH>
                    <TH COLSPAN=3>Semana 5-6</TH>
                    <TH COLSPAN=1>Color</TH>
                    <TH COLSPAN=1>Día</TH>
                    <TH COLSPAN=1>Editar</TH>

                </TR>

                <TR>

                    <TH></TH>
                    <TH>S</TH>
                    <TH>R</TH>
                    <TH>P</TH>
                    <TH>S</TH>
                    <TH>R</TH>
                    <TH>P</TH>
                    <TH>S</TH>
                    <TH>R</TH>
                    <TH>P</TH>
                    <TH></TH>
                    <TH></TH>
                    <TH></TH>
                </TR>
            </thead>
            <tbody>
                @foreach (var row in ViewBag.Conjunto_Ejercicios)
                {
                    <tr>
                        <td>@row.NombreEjercicio</td>
                        <td>@row.Serie1</td>
                        <td>@row.Repeticion1</td>
                        <td>@row.Peso1</td>
                        <td>@row.Serie2</td>
                        <td>@row.Repeticion2</td>
                        <td>@row.Peso2</td>
                        <td>@row.Serie3</td>
                        <td>@row.Repeticion3</td>
                        <td>@row.Peso3</td>
                        <td>@row.ColorEjercicio</td>
                        <td>@row.diaEjercicio</td>
                        <td>
                            @Html.ActionLink("Editar", "EditEjercicio", new { id = row.Conjunto_EjercicioId }) |
                            @Html.ActionLink("Eliminar", "DeleteEjercicio", new { id = row.Conjunto_EjercicioId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <section>
        <table id="tabla" class="table table-condensed table-bordered table-hover">
            <TR align="center" class="active">
                <TH COLSPAN=1>Ejercicio</TH>
                <TH COLSPAN=3>Semana 1-2</TH>
                <TH COLSPAN=3>Semana 3-4</TH>
                <TH COLSPAN=3>Semana 5-6</TH>
                <TH COLSPAN=1>Color</TH>
                <TH COLSPAN=1>Día</TH>
                <TH COLSPAN=1>Accion</TH>

            </TR>

            <TR>
                <TH></TH>
                <TH>S</TH>
                <TH>R</TH>
                <TH>P</TH>
                <TH>S</TH>
                <TH>R</TH>
                <TH>P</TH>
                <TH>S</TH>
                <TH>R</TH>
                <TH>P</TH>
                <TH></TH>
                <TH></TH>
                <TH></TH>
            </TR>
        </table>
        <br>
        <div class="btn-der">
            <br>
            <button id="adicional" name="adicional" type="button" class="btn btn-warning"> Mas + </button>
            <button id="submit" name="submit" type="submit" class="btn btn-default"> Crear </button>
        </div>

        @{
            var viewDataRutina = ViewData["rutina"];
        }
        @Html.Hidden("data", viewDataRutina)

    </section>

</body>
</html>

