@model IEnumerable<SOGIP_v2.Models.Conjunto_Ejercicio>
@{
    ViewBag.Title = "Ejercicios";
}

@Html.ActionLink("Volver a Inicio", "Index", "Home", null, new { @class = "btn btn-default" })
<h3>Rutina</h3>
@{
    var viewDataRutina = ViewData["rutina"];
}
@Html.Hidden("data", viewDataRutina)
<div class="row">
    <div class="col-sm-12">
        <table id="proveedores" class="table table-bordered table-responsive table-hover">
            <thead style="background-color:#337ab7;border-color:#2e6da4;color:#fff;">
                <TR>
                    <TH COLSPAN=1>Ejercicio</TH>
                    <TH COLSPAN=3>Semana 1-2</TH>
                    <TH COLSPAN=3>Semana 3-4</TH>
                    <TH COLSPAN=3>Semana 5-6</TH>
                </TR>
                <TR>
                    <TH></TH>
                    <TH>S</TH>
                    <TH>R</TH>
                    <TH>P</TH>
                    <TH>S</TH>
                    <TH>R</TH>
                    <TH>P</TH>
                    <TH>S</TH>
                    <TH>R</TH>
                    <TH>P</TH>
                </TR>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Conjunto_Ejercicios)
                {
                    <tr>
                        <td>@item.NombreEjercicio</td>
                        <td>@item.Serie1</td>
                        <td>@item.Repeticion1</td>
                        <td>@item.Peso1</td>
                        <td>@item.Serie2</td>
                        <td>@item.Repeticion2</td>
                        <td>@item.Peso2</td>
                        <td>@item.Serie3</td>
                        <td>@item.Repeticion3</td>
                        <td>@item.Peso3</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

