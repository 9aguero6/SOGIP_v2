@using Microsoft.AspNet.Identity
@using App.Extensions

@{
    ViewBag.Title = "Perfil";
}

@Styles.Render("~/Content/Perfil.css")

@*src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50"*@

<br><br>
<div class="container">
    <div class="well span8 offset2">    @* Este es el "card" *@
        <div class="row-fluid user-row">

            <div class="span1">
                <img class="img-circle" src="~/Content/Imagenes/W4.jpg" alt="User Pic" , style="width:50px;height:50px;">
            </div>

            <div class="span10">
                <strong>Josfat</strong><br>
                <strong>@Html.Label("Nombre")</strong><br>
                <span class="text-muted">Tipo de usuario: Administrator</span>
            </div>
            <div class="span1 dropdown-user" data-for=".cyruxx">
                <i class="icon-chevron-down text-muted"></i>
            </div>
        </div>
        <div class="row-fluid user-infos cyruxx">
            <div class="span10 offset1">
                <div class="panel panel-primary">
                    @* Esto es lo azul. *@
                    <div class="panel-heading">
                        <h3 class="panel-title">Información General</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row-fluid">
                            <div class="span3">
                                <img class="img-circle" src="~/Content/Imagenes/W4.jpg" alt="User Pic" , style="width:100px;height:100px;">
                            </div>
                            <div class="span6">
                                <strong>Josafat</strong><br>
                                <table class="table table-condensed table-responsive table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Nombre:</td>
                                            <td>Josafat</td>
                                        </tr>
                                        <tr>
                                            <td>Apellidos:</td>
                                            <td>Barboza Umaña</td>
                                        </tr>
                                        <tr>
                                            <td>Fecha de nacimiento:</td>
                                            <td>10/06/1989</td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td>josafat@icoder.co.cr</td>
                                        </tr>
                                        <tr>
                                            <td>Localidad:</td>
                                            <td>(vacía)</td>
                                        </tr>
                                        <tr>
                                            <td>Género:</td>
                                            <td>Masculino</td>
                                        </tr>
                                        <tr>
                                            <td>Documentos adjuntados:</td>
                                            <td>0</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="btn  btn-primary" type="button"
                                data-toggle="tooltip"
                                data-original-title="Send message to user">
                            <i class="icon-envelope icon-white"></i>
                        </button>

                        <span class="pull-right">
                            @Html.ActionLink("Editar", "Edit", "UsersAdmin", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new { id = "editar", @class = "btn btn-warning", @type = "button" })
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

